@{
	ViewData["Title"] = "Workers List";
}
<div class="mb-1">
	<a href="@Url.Action("Create", "Worker")"
	   class="btn btn-primary">
		<i class="bi bi-plus-circle"></i> Add Worker
	</a>
</div>

<table class="table table-striped table-hover">
	<thead class="table-dark">
		<tr>
			<th>Name</th>
			<th>Occupation</th>
			<th>Gender</th>
			<th>Daily Wages</th>
			<th style="width: 120px;">Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var _ in Enumerable.Range(0, 10))
		{
			<tr>
				<td>Name</td>
				<td>Occupation</td>
				<td>Gender</td>
				<td>DailyWage</td>
				<td>
					<div class="d-flex justify-content-between">
						<a href="@Url.Action("Edit", "Workers")" data-bs-toggle="tooltip" title="Edit Worker">
							<i class="bi bi-pencil text-primary ms-3"></i>
						</a>
						<a href="@Url.Action("Delete", "Workers")" data-bs-toggle="tooltip" title="Delete Worker">
							<i class="bi bi-trash text-danger me-3"></i>
						</a>
					</div>

				</td>
			</tr>
		}
	</tbody>
</table>
