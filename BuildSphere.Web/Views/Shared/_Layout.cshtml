@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Construction Dashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
</head>
<body>
    <div class="app-container">
        <!-- SIDEBAR -->
        <aside class="sidebar">
            <div class="sidebar-logo">
                <img src="~/images/Builder-Logo.jpg" class="profile-pic" alt="Profile" />
                <h5>BuildSphere</h5>
            </div>

            <nav class="sidebar-menu">
                <a href="@Url.Action("Index", "Dashboard")" class="menu-item">🏠 Dashboard</a>
                <a href="@Url.Action("Index", "Project")" class="menu-item">📂 Projects</a>
                <a href="/Payments" class="menu-item">💰 Payments</a>
                <a href="@Url.Action("Index", "Worker")" class="menu-item">👷 Workers</a>
                <a href="/Materials" class="menu-item">📦 Materials</a>
                <a href="/Deadlines" class="menu-item">📅 Deadlines</a>
            </nav>

            <div class="sidebar-footer">
                @if (User?.Identity?.IsAuthenticated == true)
                {
                    <a href="@Url.Action("Logout", "User")" class="menu-item">🚪 Logout</a>
                }
                else
                {
                    <a href="@Url.Action("Login", "User")" class="menu-item">🔑 Login</a>
                    <a href="@Url.Action("Signup", "User")" class="menu-item">📝 Signup</a>
                }
                
            </div>
        </aside>

        <!-- MAIN CONTENT -->
        <main class="main-section">
            <!-- FIXED HEADER -->
            <header class="main-header">
                <h5>@ViewData["Title"]</h5>
            </header>

            <!-- SCROLLABLE CONTENT -->
            <div class="main-content">
                @RenderBody()
            </div>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
