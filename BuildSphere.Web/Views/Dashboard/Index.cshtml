@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	ViewBag.Title = "Dashboard";
}

<div class="container-fluid">
	<div class="row g-3">

		<!-- Active Projects -->
		<div class="col-lg-6 col-12">
			<div class="card h-100 dashboard-card">
				<div class="card-header">Active Projects</div>
				<div class="card-body scrollable-table">
					<table class="table table-hover table-sm">
						<thead>
							<tr>
								<th>Name</th>
								<th>Village</th>
								<th>Owner</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var iterator in Enumerable.Range(0, 15))
							{
								<tr>
									<td>Project A</td>
									<td>Village 1</td>
									<td>Owner X</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
		<div class="col-lg-6 col-12">
			<div class="card h-100 dashboard-card">
				<div class="card-header">Projects History</div>
				<div class="card-body scrollable-table">
					<table class="table table-hover table-sm">
						<thead>
							<tr>
								<th>Name</th>
								<th>Village</th>
								<th>Owner</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var iterator in Enumerable.Range(0, 15))
							{
								<tr>
									<td>Project A</td>
									<td>Village 1</td>
									<td>Owner X</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
		<!-- Projects -->
		<div class="col-lg-4 col-12">
			<div class="card h-100 dashboard-card">
				<div class="card-header">Projects</div>
				<div class="card-body">
					<p>Project count and summary...</p>
				</div>
			</div>
		</div>

		<!-- Payments -->
		<div class="col-lg-4 col-12">
			<div class="card h-100 dashboard-card">
				<div class="card-header">Payments</div>
				<div class="card-body">
					<p>Pending and completed payments...</p>
				</div>
			</div>
		</div>

	</div>

	<div class="row g-3 mt-2">

		<!-- Available Workers -->
		<div class="col-lg-4 col-12">
			<div class="card h-100 dashboard-card">
				<div class="card-header">Available Workers</div>
				<div class="card-body">
					Worker details...
				</div>
			</div>
		</div>

		<!-- Upcoming Workers -->
		<div class="col-lg-4 col-12">
			<div class="card h-100 dashboard-card">
				<div class="card-header">Upcoming Workers</div>
				<div class="card-body">
					Worker details...
				</div>
			</div>
		</div>

		<!-- Workers Out -->
		<div class="col-lg-4 col-12">
			<div class="card h-100 dashboard-card">
				<div class="card-header">Workers Out</div>
				<div class="card-body">
					Worker details...
				</div>
			</div>
		</div>

	</div>
</div>